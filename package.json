{
  "name": "@ajhalili2006/webtop-custom-images",
  "author": "Andrei Jiroh Halili <ajhalili2006@gmail.com>",
  "license": "GPL-3.0",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "global:hadolint": "hadolint \"$@\"",
    "workspace:build": "docker build --file .gitpod.Dockerfile .",
    "start": "yarn compose-up:xfce4-alpine",
    "compose-up:xfce4-alpine": "PUID=$(id -u) PGID=$(id -g) docker-compose -f docker/localdev/xfce-alpine.docker-compose.yml up -d --build",
    "compose-up:xfce4-alpine-gp": "PUID=33333 PGID=33333 docker-compose -f docker/localdev/xfce-alpine.docker-compose.yml up -d --build",
    "compose-up:xfce4-alpine-devshell": "HOMEDIR=$HOME PUID=1000 PGID=1000 docker-compose -f docker/gcloud/xfce-alpine.docker-compose.yml up -d --build",
    "compose-up-ci:xfce4-alpine": "PUID=$(id -u) PGID=$(id -g) docker-compose -f docker/localdev/xfce-alpine-pullonly.docker-compose.yml up -d",
    "compose-up-ci:xfce4-alpine-gp": "PUID=33333 PGID=33333 docker-compose -f docker/localdev/xfce-alpine-pullonly.docker-compose.yml up -d",
    "compose-up-ci:xfce4-alpine-devshell": "HOMEDIR=$HOME PUID=1000 PGID=1000 docker-compose -f docker/gcloud/xfce-alpine-pullonly.docker-compose.yml up -d",
    "compose-down:xfce4-alpine": "docker-compose -f docker/localdev/xfce-alpine.docker-compose.yml down",
    "compose-down:xfce4-alpine-gp": "docker-compose -f docker/localdev/xfce-alpine.docker-compose.yml down",
    "compose-down:xfce4-alpine-devshell": "docker-compose -f docker/gcloud/xfce-alpine.docker-compose.yml down",
    "compose-stop:xfce4-alpine": "docker-compose  -f docker/localdev/xfce-alpine.docker-compose.yml stop",
    "compose-stop:xfce4-alpine-gp": "docker-compose -f docker/localdev/xfce-alpine.docker-compose.yml stop",
    "compose-stop:xfce4-alpine-devshell": "docker-compose -f docker/gcloud/xfce-alpine.docker-compose.yml stop",
    "ts-exec:xfce4-alpine": "docker exec -it localdev_webtop-xfce4-alpine_1 tailscale \"$@\"",
    "ts-exec:xfce4-alpine-gp": "yarn ts-exec:xfce4-alpine \"$@\"",
    "ts-exec:xfce4-alpine-devshell": "docker exec -it gcloud_webtop-xfce4-alpine_1 tailscale \"$@\"",
    "ts-ping:xfce4-alpine": "yarn ts-exec:xfce4-alpine ping -c 0 --until-direct=false \"$@\"",
    "ts-ping:xfce4-alpine-gp": "yarn ts-ping:xfce4-alpine \"$@\"",
    "ts-ping:xfce4-alpine-devshell": "yarn ts-exec:xfce4-alpine-devshell ping -c 0 --until-direct=false \"$@\"",
    "compose-logs:xfce4-alpine": "docker-compose -f docker/localdev/xfce-alpine.docker-compose.yml logs -f -t --tail=all",
    "compose-logs:xfce4-alpine-gp": "yarn compose-logs:xfce4-alpine",
    "compose-logs:xfce4-alpine-devshell": "docker-compose -f docker/gcloud/xfce-alpine.docker-compose.yml logs -f -t --tail=all",
    "build:xfce4-alpine": "docker build --tag ajhalili2006/webtop-xfce4:alpine --file src/alpine/xfce4.Dockerfile src/alpine"
  },
  "description": "This repository contains stuff I use for running an Linuxserver Webtop containers in remote basis, especially in Google Cloud Shell.",
  "version": "0.1.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajhalili2006/webtop-custom-images.git"
  },
  "bugs": {
    "url": "https://github.com/ajhalili2006/webtop-custom-images/issues"
  },
  "homepage": "https://github.com/ajhalili2006/webtop-custom-images#readme"
}
